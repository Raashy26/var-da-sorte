<style>
.filters { margin: 40px 0 20px; text-align: center; }
.filter-buttons button { margin: 0 10px 10px 0; }

.challenges-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 25px;
}

.challenge-card {
  background-color: #eafaf1 !important;
  border-radius: 12px;
  padding: 20px;
  box-shadow: 0 4px 8px rgba(0,0,0,0.05);
  transition: transform 0.3s, box-shadow 0.3s;
}
.challenge-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 16px rgba(0,0,0,0.1);
}
.challenge-card h3 { color: #2d9c6a; margin-bottom: 10px; }
.challenge-card p { font-size: 0.9rem; margin: 5px 0; }

.btn-details, .history-grid .btn-secondary {
  display: block;
  margin-top: 10px;
  text-align: center;
  background-color: #2d9c6a !important;
  color: #ffffff !important;
  border: none;
  border-radius: 8px;
  padding: 8px 14px;
  font-weight: bold;
  transition: background-color 0.3s;
}
.btn-details:hover, .history-grid .btn-secondary:hover {
  background-color: #218c5a !important;
}

@media (max-width: 768px) {
  .challenges-grid { grid-template-columns: 1fr; }
  .history-grid { grid-template-columns: 1fr 1fr; }
}
</style>

<script>
const filterButtons = document.querySelectorAll(".filter-btn");
const challengeCards = document.querySelectorAll(".challenge-card");

filterButtons.forEach(btn => {
  btn.addEventListener("click", () => {
    const filter = btn.dataset.filter;
    challengeCards.forEach(card => {
      card.style.display = "block";
      if(filter !== "all" && card.dataset.type !== filter) {
        card.style.display = "none";
      }
    });
  });
});
</script>
