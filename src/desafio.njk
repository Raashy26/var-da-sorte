    }
  ] %}

  <div class="challenges-grid">
    {% for desafio in desafios %}
    <div class="challenge-card" data-type="{{ desafio.type }}">
      <h3>{{ desafio.title }}</h3>
      <p>{{ desafio.description }}</p>
      <p><strong>Odd m√≠nima:</strong> {{ desafio.odds }}</p>
