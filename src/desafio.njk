<style>
.filters { margin: 40px 0 20px; text-align: center; }
.filter-buttons button { margin: 0 10px 10px 0; }

.challenges-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
