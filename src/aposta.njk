layout: layouts/base.njk
title: "Progn√≥sticos Di√°rios - VAR da Sorte"
---

<section class="page-header">
  <div class="container" style="text-align:center; margin-top:40px;">
    <h1>üìÖ Progn√≥sticos Di√°rios</h1>
    <p>As nossas apostas recomendadas para hoje, atualizadas diariamente com base em an√°lises e estat√≠sticas.</p>
  </div>
</section>

<section class="filters container">
  <div class="filter-buttons">
    <button class="btn btn-secondary filter-btn" data-filter="all">Todas</button>
    <button class="btn btn-secondary filter-btn" data-filter="favorites">Favoritas ‚≠ê</button>
    <button class="btn btn-secondary filter-btn" data-filter="high-odds">Odds Altas üî•</button>
  </div>
</section>

<section class="daily-bets container">
  {% set hoje = "now" | date("yyyy-MM-dd") %}
  {% set apostasHoje = collections.apostas | selectattr("date", "stringstartswith", hoje) | list %}
  
  {% if apostasHoje | length > 0 %}
    <div class="bets-grid">
      {% for post in apostasHoje %}
      <div class="bet-card" data-odds="{{ post.data.odds | default(0) }}" data-favorite="{{ post.data.favorite | default(false) }}">
        <div class="bet-header">
          <h3>{{ post.data.home }} vs {{ post.data.away }}</h3>
          <span class="competition">{{ post.data.competition }}</span>
        </div>
        <div class="bet-details">
          <p><strong>Data/Hora:</strong> {{ post.date | date("dd/MM/yyyy HH:mm") }}</p>
          <p><strong>Tipo de Aposta:</strong> {{ post.data.tip | default("1X2") }}</p>
          <p><strong>Odds:</strong>
            1: {{ post.data.odds.home | default("-") }} |
            X: {{ post.data.odds.draw | default("-") }} |
            2: {{ post.data.odds.away | default("-") }}
          </p>
        </div>
        <a href="{{ post.url }}" class="btn btn-primary btn-details">Ver Detalhes</a>
      </div>
      {% endfor %}
    </div>
  {% else %}
    <p style="text-align:center; margin-top:20px;">‚ö†Ô∏è Em breve vais encontrar aqui os progn√≥sticos do dia. Mant√©m-te atento!</p>
  {% endif %}
</section>

<section class="historical-bets container" style="margin-top:50px;">
  <h2 style="color:#2d9c6a; text-align:center;">üìñ Hist√≥rico - √öltimos 30 dias</h2>
  <div class="history-grid" style="display:grid; grid-template-columns:repeat(auto-fit,minmax(150px,1fr)); gap:15px; margin-top:20px;">
    {% set apostasPorData = {} %}
    {% for post in collections.apostas %}
      {% set dataStr = post.date | date("yyyy-MM-dd") %}
      {% if apostasPorData[dataStr] is not defined %}
        {% set apostasPorData = apostasPorData | merge({ (dataStr): [post] }) %}
      {% else %}
        {% set apostasPorData = apostasPorData | merge({ (dataStr): apostasPorData[dataStr] + [post] }) %}
      {% endif %}
    {% endfor %}

    {% set datasOrdenadas = apostasPorData | dictsort(false) | reverse %}
    {% for item in datasOrdenadas | slice(0,30) %}
      {% set dia = item[0] %}
      <a href="/aposta/{{ dia }}/" class="btn btn-secondary" style="display:block; text-align:center;">{{ dia | date("dd/MM") }}</a>
    {% endfor %}
  </div>
</section>

<section class="cta container">
  <div style="text-align:center; margin-top:40px;">
    <a href="/desafio/" class="btn btn-primary btn-lg">Participa nos Desafios Di√°rios ‚ö°</a>
  </div>
</section>

<style>
/* Cards e hist√≥rico */
.bets-grid, .history-grid {
  margin-top: 20px;
}
.bet-card {
  background-color: #eafaf1 !important;
  color: #000000 !important;
  border-radius: 12px;
  padding: 20px;
  box-shadow: 0 4px 8px rgba(0,0,0,0.05);
  transition: transform 0.3s, box-shadow 0.3s;
}
.bet-card * {
  color: #000000 !important;
}
.bet-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 16px rgba(0,0,0,0.1);
}
.bet-header h3 {
  color: #2d9c6a;
  margin-bottom:5px;
}
.competition {
  font-size:0.9rem;
  color:#217b53;
}
.bet-details p {
  font-size:0.9rem;
  margin:5px 0;
}
.btn-details, .history-grid .btn-secondary {
  background-color: #2d9c6a !important;
  color:#ffffff !important;
  border:none;
  border-radius:8px;
  padding:8px 14px;
  font-weight:bold;
  text-align:center;
  transition: background-color 0.3s;
}
.btn-details:hover, .history-grid .btn-secondary:hover {
  background-color: #218c5a !important;
}

/* Filtros */
.filters {
  margin:40px 0 20px;
  text-align:center;
}
.filter-buttons button {
  margin:0 10px 10px 0;
}

@media(max-width:768px){
  .bets-grid{
    grid-template-columns:1fr;
  }
  .history-grid {
    grid-template-columns:1fr 1fr;
  }
}
</style>

<script>
/* Filtros simples */
const filterButtons = document.querySelectorAll(".filter-btn");
const betCards = document.querySelectorAll(".bet-card");

filterButtons.forEach(btn => {
  btn.addEventListener("click", () => {
    const filter = btn.dataset.filter;
    betCards.forEach(card => {
      card.style.display = "block";
      if(filter === "favorites" && !card.dataset.favorite) card.style.display = "none";
      if(filter === "high-odds" && parseFloat(card.dataset.odds) < 2.0) card.style.display = "none";
    });
  });
});
</script>
