<script>
/* Filtros simples */
const filterButtons = document.querySelectorAll(".filter-btn");
const betCards = document.querySelectorAll(".bet-card");

filterButtons.forEach(btn => {
  btn.addEventListener("click", () => {
    const filter = btn.dataset.filter;
    betCards.forEach(card => {
      card.style.display = "block";
      if(filter === "favorites" && !card.dataset.favorite) card.style.display = "none";
      if(filter === "high-odds" && parseFloat(card.dataset.odds) < 2.0) card.style.display = "none";
    });
  });
});
</script>

